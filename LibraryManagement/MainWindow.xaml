<Window x:Class="LibraryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Name="mainWindow"
       
        DataContext="{StaticResource MainVM}"
        
        Title="PHẦN MỀM QUẢN LÝ THƯ VIỆN" Height="600" Width="1080">

    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="OpenMenu2">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu2">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu2">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu2">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="OpenMenu3">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu3">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu3">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu3">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="OpenMenu4">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu4">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu4">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" 
                                           Storyboard.TargetName="GridMenu4">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu3">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu3}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu3">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu3}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu4">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu4}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu4">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu4}"/>
        </EventTrigger>
    </Window.Triggers>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"/>
            <!--<i:InvokeCommandAction Command="{Binding LoadedDashboardCommand}" CommandParameter="{Binding ElementName=lsvBorrow}"/>-->
        </i:EventTrigger>
        <i:EventTrigger EventName="MouseLeftButtonDown">
            <i:InvokeCommandAction Command="{Binding MoveWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF0D99F0">
            <Image Source="/ResourcesImage/AvtMain.png" HorizontalAlignment="Left" Margin="10"></Image>
            <TextBlock Text="PHẦN MỀM QUẢN LÝ THƯ VIỆN TRƯỜNG HỌC" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontFamily="Champagne &amp; Limousines" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Command="{Binding MinimizeWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"
                        BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                    <materialDesign:PackIcon Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center"
                                         Background="Transparent" Kind="WindowMinimize" Foreground="White"/>
                </Button>
                <Button Command="{Binding MaximizeWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"
                        BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                    <materialDesign:PackIcon Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                         Background="Transparent" Kind="WindowMaximize" Foreground="White" />
                </Button>
                <Button Command="{Binding CloseWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"
                        BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                    <materialDesign:PackIcon Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                         Background="Transparent" Kind="WindowClose" Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="#FF0D99F0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10 0 150 0">
                <Button Width="55" Height="40" Background="Transparent" Uid="0"
                        BorderBrush="Transparent" Click="Button_Click" 
                        Command="{Binding LoadTab1Command}" CommandParameter="{Binding ElementName=tabMain}">
                    <materialDesign:PackIcon Kind="Home" Foreground="White" Width="22" Height="22"/>
                </Button>
                <Button Uid="1" Width="160" Content="QUẢN LÝ CHUNG" Height="30" Background="{x:Null}" 
                        BorderBrush="{x:Null}" Foreground="White" Click="Button_Click"
                        Command="{Binding LoadTab2Command}" CommandParameter="{Binding ElementName=tabMain}"/>
                <Button Uid="2" Width="160" Content="ĐỘC GIẢ" Height="30" Background="{x:Null}" 
                        BorderBrush="{x:Null}" Foreground="White" Click="Button_Click"
                        Command="{Binding LoadTab3Command}" CommandParameter="{Binding ElementName=tabMain}"/>
                <Button Uid="3" Width="160" Content="NHÂN VIÊN" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" 
                        Foreground="White" Click="Button_Click" Command="{Binding LoadTab4Command}" CommandParameter="{Binding ElementName=tabMain}"/>
                <Button Uid="4" Width="160" Content="NHẬP SÁCH" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" 
                        Foreground="White" Click="Button_Click" Command="{Binding LoadTab5Command}" CommandParameter="{Binding ElementName=tabMain}"/>
                <Button Uid="5" Width="160" Content="THÔNG TIN" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" 
                        Foreground="White" Click="Button_Click"
                        Command="{Binding LoadTab6Command}" CommandParameter="{Binding ElementName=tabMain}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                <TextBlock Text="{Binding AccountNameLogin}" FontSize="18"  Foreground="White" Margin="10 5 10 0"/>
                <Button Background="Transparent" BorderBrush="Transparent" BorderThickness="0" 
                        Command="{Binding LogoutCommand}" CommandParameter="{Binding ElementName=mainWindow}">
                    <materialDesign:PackIcon Kind="Logout" Height="20" Width="20" Foreground="White"/>
                </Button>
            </StackPanel>
            <Grid x:Name="GridCursor" Width="160" Height="3" VerticalAlignment="Bottom" Background="Transparent" 
                  HorizontalAlignment="Left" Margin="65 0 0 0"/>
        </Grid>
        <Grid x:Name="GridMain" Grid.Row="2">
            <TabControl BorderBrush="Transparent" x:Name="tabMain">
                <TabItem Header="MÀN HÌNH CHÍNH" Height="0" Width="0">
                    <Grid Background="WhiteSmoke">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding WelcomeBack}" Margin="10 0" FontStyle="Italic" FontSize="20" HorizontalAlignment="Left"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Rectangle RadiusX="10" RadiusY="10" Height="140" Width="280" Fill="White">
                                    <Rectangle.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#FFECECEC" RenderingBias="Quality" ShadowDepth="1"></DropShadowEffect>
                                    </Rectangle.Effect>
                                </Rectangle>
                                <Grid Background="#FFFFAF24" Height="70" Width="45" Margin="86,5,227,75">
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#FFECECEC" RenderingBias="Quality" ShadowDepth="1"/>
                                    </Grid.Effect>
                                    <materialDesign:PackIcon Kind="BookOpenPageVariant" Height="25" Width="25" VerticalAlignment="Bottom"
                                                             Margin="10" Foreground="White"/>
                                </Grid>
                                <TextBlock Text="Tổng sách" FontSize="20" Margin="175,20,95,110" Height="30" FontWeight="Light" FontFamily="Champagne &amp; Limousines"/>
                                <TextBlock Text="{Binding SumBooks}" FontSize="40" HorizontalAlignment="Right" Margin="140 50"/>
                                <TextBlock Text="cuốn" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="80 55"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Rectangle RadiusX="10" RadiusY="10" Height="140" Width="280" Fill="White">
                                    <Rectangle.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#FFECECEC" RenderingBias="Quality" ShadowDepth="1"></DropShadowEffect>
                                    </Rectangle.Effect>
                                </Rectangle>
                                <Grid Background="#FF1C9C33" Height="70" Width="45" Margin="86,5,227,75">
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#FFECECEC" RenderingBias="Quality" ShadowDepth="1"/>
                                    </Grid.Effect>
                                    <materialDesign:PackIcon Kind="AccountCircle" Height="25" Width="25" VerticalAlignment="Bottom"
                                                             Margin="10" Foreground="White"/>
                                </Grid>
                                <TextBlock Text="Độc giả" FontSize="20" Margin="175,20,95,110" Height="30" FontWeight="Light" FontFamily="Champagne &amp; Limousines"/>
                                <TextBlock Text="{Binding SumReaders}" FontSize="40" HorizontalAlignment="Right" Margin="140 50"/>
                                <TextBlock Text="người" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="80 55"/>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Rectangle RadiusX="10" RadiusY="10" Height="140" Width="280" Fill="White">
                                    <Rectangle.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#FFECECEC" RenderingBias="Quality" ShadowDepth="1"></DropShadowEffect>
                                    </Rectangle.Effect>
                                </Rectangle>
                                <Grid Background="#FF246AFF" Height="70" Width="45" Margin="86,5,227,75">
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#FFECECEC" RenderingBias="Quality" ShadowDepth="1"/>
                                    </Grid.Effect>
                                    <materialDesign:PackIcon Kind="BookMultiple" Height="25" Width="25" VerticalAlignment="Bottom"
                                                             Margin="10" Foreground="White"/>
                                </Grid>
                                <TextBlock Text="Mượn sách" FontSize="20" Margin="175,20,80,100" Height="30" FontWeight="Light" FontFamily="Champagne &amp; Limousines"/>
                                <TextBlock Text="{Binding SumBorrows}" FontSize="40" HorizontalAlignment="Right" Margin="140 50"/>
                                <TextBlock Text="cuốn" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="80 55"/>
                            </Grid>
                        </Grid>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding TxbSearchChangedCommand}"
                                                CommandParameter="{Binding ElementName=lsvBorrow}">
                                    <materialDesign:PackIcon Kind="Magnify" Opacity=".56"/>
                                </Button>
                                <TextBox Grid.Column="1" Margin="8 0 0 0" materialDesign:HintAssist.Hint="Gõ từ cần tìm vào đây..."
                                                 Text="{Binding txbSearch}"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" FontSize="16"
                                                 MinWidth="200" VerticalAlignment="Center" Name="txbSearch">
                                </TextBox>
                            </Grid>
                            <ComboBox Margin="10 0 0 0" ItemsSource="{Binding ListSearch}" DisplayMemberPath="Tname"
                                              SelectedItem="{Binding SelectedSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              materialDesign:HintAssist.Hint="Tìm theo..." IsEditable="True" FontSize="16" Width="150"/>
                        </StackPanel>
                        <materialDesign:Card Grid.Row="3" Margin="5" VerticalAlignment="Stretch">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListView Name="lsvBorrow" ItemsSource="{Binding ListReader, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Tên người mượn" DisplayMemberBinding="{Binding Displayname}"/>
                                            <GridViewColumn Header="Số sách mượn" DisplayMemberBinding="{Binding BookBorrowCount}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </TabItem>
                <TabItem Header="QUẢN LÝ CHUNG"  Height="0" Width="0">
                    <DockPanel Background="Transparent" Margin="-6 -8 0 -6">
                        <!--Các button quản lý sách, nhà cung cấp, kệ sách-->
                        <Grid Name="GridMenu" Width="60" HorizontalAlignment="Left"
                              Background="#FF0D99F0">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="#FFAEAEAE"/>
                            </Grid.Effect>
                            <StackPanel>
                                <Grid>
                                    <Button x:Name="ButtonOpenMenu" Height="60" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="ButtonOpenMenu_Click">
                                        <materialDesign:PackIcon Kind="Menu" Width="25" Height="25" Foreground="White"/>
                                    </Button>
                                    <Button x:Name="ButtonCloseMenu" Visibility="Collapsed" Height="60" Width="60" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF31577E" Click="ButtonCloseMenu_Click">
                                        <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25" Foreground="White"/>
                                    </Button>
                                </Grid>
                                <Button BorderThickness="0" BorderBrush="Transparent" Background="Transparent" Width="auto" Height="auto" Margin="-9"
                                        Command="{Binding LoadTab1_1Command}" CommandParameter="{Binding ElementName=tabpart1}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="BookOpenPageVariant" Height="25" Width="25" 
                                                                     Margin="10" Foreground="White"/>
                                        <TextBlock Text="Quản lý sách" VerticalAlignment="Center" Margin="20 10"/>
                                    </StackPanel>
                                </Button>
                                <TextBlock Height="10"/>
                                <Button BorderThickness="0" BorderBrush="Transparent" Background="Transparent" Width="auto" Height="auto" Margin="-9"
                                        Command="{Binding LoadTab1_2Command}" CommandParameter="{Binding ElementName=tabpart1}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Factory" Height="25" Width="25" 
                                                                     Margin="10" Foreground="White"/>
                                        <TextBlock Text="Nhà cung cấp" VerticalAlignment="Center" Margin="20 10"/>
                                    </StackPanel>
                                </Button>
                                <TextBlock Height="10"/>
                                <Button BorderThickness="0" BorderBrush="Transparent" Background="Transparent" Width="auto" Height="auto" Margin="-9"
                                        Command="{Binding LoadTab1_3Command}" CommandParameter="{Binding ElementName=tabpart1}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="BoxShadow" Height="25" Width="25" 
                                                                     Margin="10" Foreground="White"/>
                                        <TextBlock Text="Kệ sách" VerticalAlignment="Center" Margin="20 10"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <TabControl x:Name="tabpart1" BorderBrush="Transparent">
                            <!--Tab item Sách-->
                            <TabItem Height="0" Width="0">
                                <Grid Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="160"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" FontSize="25" FontFamily="Segoe UI" HorizontalAlignment="Center"><Bold>Quản lý thông tin sách trong thư viện</Bold></TextBlock>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" IsEnabled="True">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Height="10"/>
                                                <TextBox FontSize="16" x:Name="btn_name_book" materialDesign:HintAssist.Hint="Tên sách"
                                                     Text="{Binding DisplayName_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0" />
                                                <TextBlock Height="10"/>
                                                <TextBox FontSize="16" x:Name="btn_author_book" materialDesign:HintAssist.Hint="Tác giả"
                                                     Text="{Binding Author_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0" />
                                                <TextBlock Height="10"/>
                                                <TextBox FontSize="16" x:Name="btn_kind_book" materialDesign:HintAssist.Hint="Thể loại"
                                                     Text="{Binding Kind_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Height="10"></TextBlock>
                                                <ComboBox Margin="10 0 0 0" ItemsSource="{Binding ListSuplier}" DisplayMemberPath="DisplayName"
                                                          SelectedItem="{Binding SelectedSuplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                          materialDesign:HintAssist.Hint="Nhà cung cấp" IsEditable="True" FontSize="16" 
                                                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                                <TextBlock Height="10"/>
                                                <TextBox FontSize="16" x:Name="txb_publishingyear_book" materialDesign:HintAssist.Hint="Năm xuất bản"
                                                     Text="{Binding PublishingYear_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0" />
                                                <TextBlock Height="10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Grid.Column="0" FontSize="16" x:Name="txb_pages_book" materialDesign:HintAssist.Hint="Số trang"
                                                         Text="{Binding Pages_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0"/>
                                                    <TextBox Grid.Column="1" FontSize="16" x:Name="txb_copies_book" materialDesign:HintAssist.Hint="Số bản"
                                                         Text="{Binding Copies_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0" />
                                                </Grid>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Height="10"></TextBlock>
                                                <ComboBox Margin="10 0 0 0" ItemsSource="{Binding ListBookshelf}" DisplayMemberPath="DisplayName"
                                                          SelectedItem="{Binding SelectedBookshelf, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                          materialDesign:HintAssist.Hint="Vị trí" IsEditable="True" FontSize="16" 
                                                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                                <TextBlock Height="10"/>
                                                <TextBox FontSize="16" x:Name="txb_categories_book" materialDesign:HintAssist.Hint="Chuyên mục"
                                                     Text="{Binding Catagories_Book, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"                                                     
                                                 Foreground="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 0 0 0" />
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock Height="10"/>
                                            <TextBlock Height="10"/>
                                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                Command="{Binding ButtonDelete1Command}" CommandParameter="{Binding ElementName=lsvInput}"
                                                Background="#FF086DD1" Foreground="White" Width="50" Height="50"
                                                ToolTip="Xoá sách">
                                                <materialDesign:PackIcon Kind="Delete" Height="24" Width="24" />
                                            </Button>
                                            <TextBlock Height="10"/>
                                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                Command="{Binding ButtonEdit1Command}"
                                                Background="#FF086DD1" Foreground="White" Width="50" Height="50"
                                                ToolTip="Sửa sách">
                                                <materialDesign:PackIcon Kind="Pen" Height="24" Width="24" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding TxbSearch1ChangedCommand}"
                                                CommandParameter="{Binding ElementName=lsvBook}">
                                                <materialDesign:PackIcon Kind="Magnify" Opacity=".56"/>
                                            </Button>
                                            <TextBox Grid.Column="1" Margin="8 0 0 0" materialDesign:HintAssist.Hint="Gõ từ cần tìm vào đây..."
                                                 Text="{Binding txbSearch1}"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" FontSize="16"
                                                 MinWidth="200" VerticalAlignment="Center" Name="txbSearch1">
                                            </TextBox>
                                        </Grid>
                                        <ComboBox Margin="10 0 0 0" ItemsSource="{Binding ListSearch1}" DisplayMemberPath="Tname"
                                              SelectedItem="{Binding SelectedSearch1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              materialDesign:HintAssist.Hint="Tìm theo..." IsEditable="True" FontSize="16" Width="150"/>
                                        <Button Height="40" FontSize="20" Command="{Binding ExportExcel1Command}" Margin="300 5 0 5"
                                            Foreground="White" Background="Green" BorderBrush="Green" CommandParameter="{Binding ElementName=lsvBook}">
                                            _Xuất excel
                                        </Button>
                                    </StackPanel>
                                    <Grid Grid.Row="3" Margin="5">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ListView Name="lsvBook" ItemsSource="{Binding ListBook}" SelectedItem="{Binding SelectedItem_Book, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="Tên sách" DisplayMemberBinding="{Binding DisplayName}"></GridViewColumn>
                                                        <GridViewColumn Header="Tác giả" DisplayMemberBinding="{Binding Author}"></GridViewColumn>
                                                        <GridViewColumn Header="Nhà cung cấp" DisplayMemberBinding="{Binding Suplier.DisplayName}"></GridViewColumn>
                                                        <GridViewColumn Header="Thể loại" DisplayMemberBinding="{Binding Kind}"></GridViewColumn>
                                                        <GridViewColumn Header="Năm xuất bản" DisplayMemberBinding="{Binding PublishingYear}"></GridViewColumn>
                                                        <GridViewColumn Header="Vị trí" DisplayMemberBinding="{Binding Bookshelf.DisplayName}"></GridViewColumn>
                                                        <GridViewColumn Header="Số trang" DisplayMemberBinding="{Binding Pages}"></GridViewColumn>
                                                        <GridViewColumn Header="Số bản" DisplayMemberBinding="{Binding Copies}"></GridViewColumn>
                                                        <GridViewColumn Header="Chuyên mục" DisplayMemberBinding="{Binding Catagories}"></GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <!--Tab item Suplier-->
